---
import { useTranslations } from '@utils/ui';
import Layout from '@layouts/Layout.astro';
import ServiceCard from '@components/ServiceCard.astro';
import ServiceStatus from '@components/ServiceStatus.astro';
import servicesData from '@data/services.json';
import { ICONS } from '@utils/icons';

interface Service {
    name: string;
    category: string;
    [key: string]: any;
}

interface Categories {
    [key: string]: Service[];
}

const t = useTranslations(Astro.currentLocale);
const services: Service[] = servicesData.services || [];

const categories: Categories = {};
for (const service of services) {
    if (!categories[service.category]) {
        categories[service.category] = [];
    }
    categories[service.category].push(service);
}

const categoryIcons: { [key: string]: string } = {
    'Tools': ICONS.tools,
    'Storage': ICONS.storage,
    'DevOps': ICONS.operations,
    'Admin': ICONS.admin,
};
---

<Layout title={t('lab_title')}>

    <div class="lab-container">
        <header class="hero-section">
            <p class="hero-subtitle">Lab</p>
            <h1 class="hero-slogan">{t('lab_desc')}</h1>
            <ServiceStatus />
        </header>

        <main id="lab-main">
            {Object.entries(categories).map(([categoryName, services], index) => (
                <section class="category-section" style={`--delay: ${index * 0.1}s`}>
                    <h2 class="category-title">
                        <div class="category-icon" set:html={categoryIcons[categoryName] || ''}></div>
                        <span>{t(`categories.${categoryName}`)}</span>
                    </h2>
                    <div class="services-grid">
                        {services.map((service, sIndex) => (
                            <div class="service-wrapper" style={`--delay: ${(index * 0.1) + (sIndex * 0.05)}s`}>
                                <ServiceCard service={service} t={t} />
                            </div>
                        ))}
                    </div>
                </section>
            ))}
        </main>
    </div>
</Layout>

<style is:global>
    /* Global Body Style Override */
    body {
        height: auto;
        display: block;
        justify-content: initial;
        align-items: initial;
    }



    .hero-subtitle {
        font-family: var(--font-serif);
        font-size: 0.9rem;
        letter-spacing: 0.2em;
        color: var(--grey);
        text-transform: uppercase;
        margin-bottom: 1rem;
        opacity: 0.8;
    }
  
    /* Lab Page Layout */
    .lab-container {
        max-width: 1000px;
        margin: 6rem auto 2rem;
        padding: 0 24px;
    }

    /* Hero Section */
    .hero-section {
        text-align: center;
        margin-bottom: 5rem;
        position: relative;
    }
    
    .hero-section::after {
        content: '';
        position: absolute;
        bottom: -2.5rem;
        left: 50%;
        transform: translateX(-50%);
        width: 60px;
        height: 4px;
        background: linear-gradient(90deg, var(--purple), var(--blue));
        border-radius: 2px;
        opacity: 0.6;
    }

    .hero-slogan {
        font-family: var(--font-serif);
        font-size: 3.5rem;
        font-weight: 700;
        color: var(--text);
        line-height: 1.2;
        letter-spacing: -0.02em;
        background: linear-gradient(135deg, var(--text) 0%, var(--grey) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 1.5rem;
    }

    /* Category Section */
    .category-section {
        margin-top: 4rem;
        opacity: 0;
        animation: fadeInUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
        animation-delay: var(--delay);
    }

    .category-title {
        display: flex;
        align-items: center;
        gap: 1rem;
        font-size: 1.8rem;
        font-weight: 600;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid rgba(162, 89, 236, 0.1);
        font-family: var(--font-serif);
        color: var(--text);
    }

    .category-icon svg {
        width: 28px;
        height: 28px;
        color: var(--purple);
        filter: drop-shadow(0 2px 4px rgba(162, 89, 236, 0.2));
    }

    /* Services Grid */
    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 3rem 1.5rem;
    }

    .service-wrapper {
        opacity: 0;
        animation: fadeInUp 0.6s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
        animation-delay: var(--delay);
        position: relative; /* Ensure z-index works */
        transition: z-index 0s step-end 0.3s;
    }
    
    .service-wrapper:hover {
        z-index: 10;
        transition: z-index 0s step-start;
    }

    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    /* Service Card Redesign - Global Styles for Component */
    .service-card {
        background: rgba(255, 255, 255, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.4);
        border-radius: 16px;
        padding: 1.2rem;
        text-decoration: none;
        color: var(--text);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
        min-height: 140px;
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        box-shadow: 
            0 4px 20px -2px rgba(0, 0, 0, 0.02),
            0 0 0 1px rgba(255, 255, 255, 0.5) inset;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .service-card:hover {
        transform: translateY(-6px) scale(1.02);
        box-shadow: 
            0 20px 40px -4px rgba(162, 89, 236, 0.15),
            0 0 0 1px rgba(162, 89, 236, 0.3) inset;
        background: rgba(255, 255, 255, 0.8);
        z-index: 2;
    }

    .card-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .card-icon svg {
        width: 32px;
        height: 32px;
        color: var(--grey);
        transition: all 0.3s ease;
    }

    .service-card:hover .card-icon svg {
        color: var(--purple);
        transform: scale(1.1);
    }

    .card-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--text);
    }

    .card-desc {
        font-size: 0.95rem;
        color: var(--grey);
        line-height: 1.6;
        flex-grow: 1;
        opacity: 0.9;
    }

    .card-footer {
        margin-top: 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 1rem;
        border-top: 1px solid rgba(0, 0, 0, 0.05);
    }

    .status {
        display: flex;
        align-items: center;
        background: rgba(0, 0, 0, 0.03);
        padding: 4px 10px;
        border-radius: 20px;
    }

    .status-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        margin-right: 8px;
        box-shadow: 0 0 8px currentColor;
    }

    .status-dot.up { background-color: #10b981; color: rgba(16, 185, 129, 0.4); }
    .status-dot.down { background-color: #ef4444; color: rgba(239, 68, 68, 0.4); }
    .status-dot.unknown { background-color: #9ca3af; color: rgba(156, 163, 175, 0.4); }

    .status-text {
        font-size: 0.8rem;
        font-weight: 500;
        color: var(--grey);
    }

    .external-link-icon {
        color: var(--grey);
        opacity: 0.4;
        transition: all 0.3s ease;
        transform: translateX(0);
    }
    
    .service-card:hover .external-link-icon {
        opacity: 1;
        color: var(--purple);
        transform: translateX(2px) translateY(-2px);
    }

    .external-link-icon svg {
        width: 18px;
        height: 18px;
    }

    /* Dark Mode */
    html.dark .service-card {
        background: rgba(30, 30, 30, 0.4);
        border: 1px solid rgba(255, 255, 255, 0.05);
        box-shadow: 
            0 4px 20px -2px rgba(0, 0, 0, 0.2),
            0 0 0 1px rgba(255, 255, 255, 0.05) inset;
    }

    html.dark .service-card:hover {
        background: rgba(40, 40, 40, 0.95);
        box-shadow: 
            0 20px 40px -4px rgba(162, 89, 236, 0.15),
            0 0 0 1px rgba(162, 89, 236, 0.3) inset;
    }

    html.dark .card-footer {
        border-top-color: rgba(255, 255, 255, 0.05);
    }

    html.dark .status {
        background: rgba(255, 255, 255, 0.05);
    }

    @media (max-width: 768px) {
        .hero-slogan {
            font-size: 2.5rem;
        }
        
        .services-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
