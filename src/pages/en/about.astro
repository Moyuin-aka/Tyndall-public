---
import Layout from '@layouts/Layout.astro';
import { useTranslations } from '@utils/ui';
import '@styles/markdown.css';

const t = useTranslations(Astro.currentLocale);
---

<Layout title={t('about_title')}>
  <main class="about-container">
    <header class="about-hero">
      <p class="about-hero-subtitle">ABOUT</p>
      <h1 class="about-hero-slogan">{t('about_slogan')}</h1>
    </header>

    <article class="about-content markdown-content">
      <!-- About Me -->
      <div class="content-section intro-section">
        <h2>About Me</h2>
        <p>Hello, I'm Your Name.</p>
        <blockquote>
          Floating or Hovering, with no origin and no destination.
        </blockquote>
        <p>This is a sample about page where you can introduce yourself.</p>
      </div>

      <!-- Background -->
      <div class="content-section">
        <h2>Background</h2>
        <p>Add your background information here...</p>
      </div>

      <!-- Origins -->

      <!-- Subscribe -->
      <div class="content-section subscribe-section">
        <p>You can subscribe to this site's updates via <a href="/rss.xml" target="_blank" rel="noopener noreferrer">RSS</a> ðŸŒ±</p>
      </div>
    </article>
  </main>
</Layout>

<style>
  .about-container {
    max-width: 800px;
    margin: 5rem auto 2rem;
    padding: 20px;
  }

  .about-hero {
    text-align: center;
    margin-bottom: 4rem;
  }

  .about-hero-subtitle {
    font-family: var(--font-serif);
    font-size: 0.9rem;
    letter-spacing: 0.1em;
    color: var(--grey);
    text-transform: uppercase;
    margin-bottom: 0.5rem;
  }

  .about-hero-slogan {
    font-family: var(--font-serif);
    font-size: 3rem;
    font-weight: 700;
    color: var(--text);
    line-height: 1.2;
  }

  /* About Content Area - Rendered with markdown.css */
  .about-content {
    font-family: var(--font-sans);
    color: var(--text);
    line-height: 1.8;
  }

  .content-section {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(162, 89, 236, 0.15);
  }

  .content-section:last-child {
    border-bottom: none;
  }

  .content-section h2 {
    font-family: var(--font-serif);
    font-size: 1.8rem;
    font-weight: 600;
    color: var(--text);
    margin-bottom: 1rem;
    letter-spacing: 0.02em;
  }

  .content-section p {
    font-size: 1.05rem;
    color: var(--text);
    opacity: 0.85;
    max-width: 65ch;
    line-height: 1.8;
    margin-bottom: 0.8rem;
  }

  .content-section p:last-child {
    margin-bottom: 0;
  }

  /* Blockquote styles */
  .content-section blockquote {
    margin: 1.5rem 0;
    padding: 1.2rem 1.5rem;
    border-left: 4px solid rgba(162, 89, 236, 0.4);
    background: rgba(162, 89, 236, 0.06);
    border-radius: 0 8px 8px 0;
    font-family: var(--font-serif);
    font-style: italic;
  }

  .content-section blockquote p {
    margin-bottom: 0.8rem;
    opacity: 0.9;
    font-size: 1.02rem;
    line-height: 1.85;
  }

  .content-section blockquote p:last-child {
    margin-bottom: 0;
  }

  /* Link styles */
  .content-section a {
    color: var(--purple);
    text-decoration: none;
    font-weight: 600;
    border-bottom: 1px solid rgba(162, 89, 236, 0.3);
    transition: all 0.2s ease;
  }

  .content-section a:hover {
    color: var(--purple);
    border-bottom-color: var(--purple);
    opacity: 0.8;
  }

  /* First paragraph style (About Me) */
  .intro-section p:first-of-type {
    font-size: 1.15rem;
    font-weight: 500;
  }

  /* Subscribe section */
  .subscribe-section {
    text-align: center;
    padding-top: 1rem;
  }

  .subscribe-section p {
    max-width: 100%;
    font-size: 1.1rem;
  }

  /* Light mode adaptation */
  :global(html:not(.dark)) .content-section blockquote {
    background: rgba(162, 89, 236, 0.04);
    border-left-color: rgba(162, 89, 236, 0.35);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .about-hero-slogan {
      font-size: 2.5rem;
    }

    .content-section h2 {
      font-size: 1.5rem;
    }

    .content-section p {
      font-size: 1rem;
    }
  }
</style>
